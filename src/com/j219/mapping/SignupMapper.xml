<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.j219.dao.SignupDao">
	<!-- <resultMap type="com.j219.model.Signup" id="userMap"> <id property="id" 
		column="id" /> <result property="userAccount" column="account" /> </resultMap> -->


	<select id="hasAccount" resultType="com.j219.model.Signup">
		select * from users where account=#{account}
	</select>
	<select id="hasUsername" resultType="com.j219.model.Signup">
		select * from users where username=#{username}
	</select>
	
	<insert id="newSignup" parameterType="com.j219.model.Signup">
		insert into users(username,account,password) values(#{username},#{account},#{password})
	</insert>

</mapper>